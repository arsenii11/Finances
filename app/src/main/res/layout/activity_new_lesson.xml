<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".course.NewLessonActivity"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <include
        android:id="@+id/toolbar2"
        layout="@layout/toolbar">
    </include>


    <TextView
        android:id="@+id/LableLsn"
        style="@style/TextView.Primary.Header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:text="New lesson"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar2" />

    <TextView
        android:id="@+id/currentDateTime"
        style="@style/LessonDateButton"
        android:layout_width="270dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/buttonbackground_1"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@+id/LableLsn"
        app:layout_constraintTop_toBottomOf="@+id/LableLsn" />

    <Button
        android:id="@+id/buttonLessonNext"
        style="@style/LessonDateButton"
        android:layout_width="211dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/buttonbackground_1"
        android:backgroundTint="@color/plus2"
        android:gravity="center"
        android:text="Complete"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:cornerRadius="12dp"
        app:iconPadding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentDateTime">

        <Button
            android:id="@+id/timeButton"
            style="@style/LessonDateButton"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:background="@drawable/buttonbackground_1"
            android:onClick="setTime"
            android:text="select time"
            android:textAllCaps="false"
            app:cornerRadius="12dp"
            app:iconPadding="0dp" />

        <Button
            android:id="@+id/dateButton"
            style="@style/LessonDateButton"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_marginStart="0dp"
            android:background="@drawable/buttonbackground_1"
            android:onClick="setDate"
            android:text="select date"
            android:textAllCaps="false"
            app:cornerRadius="12dp"
            app:iconPadding="0dp" />

        <EditText
            android:id="@+id/editTextLessonDuration"
            style="@style/LessonDateButton"
            android:layout_width="match_parent"
            android:background="@drawable/buttonbackground_1"
            android:gravity="center"
            android:inputType="time"
            android:text="duration"
            android:textStyle="bold" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>